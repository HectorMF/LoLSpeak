<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.perfectplay.com.lolspeak.MainMenu"
    android:background="#333">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/main_menu_layout"
        android:layout_alignParentBottom="true"
        android:weightSum="1"
        android:background="#333"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="League Chat"
            android:id="@+id/friendsButton"
            android:layout_gravity="center_horizontal"
            android:textSize="30dp"
            android:layout_marginBottom="30dp"
            android:textColor="#fff"
            android:background="#ff6ab5ff" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Game Information"
            android:id="@+id/gameInfoButton"
            android:layout_gravity="center_horizontal"
            android:textSize="30dp"
            android:layout_marginBottom="30dp"
            android:textColor="#fff"
            android:background="#ff6ab5ff" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Summoner Review"
            android:id="@+id/summonerReviewButton"
            android:layout_gravity="center_horizontal"
            android:textSize="30dp"
            android:layout_marginBottom="30dp"
            android:textColor="#fff"
            android:background="#ff6ab5ff" />
    </LinearLayout>
</RelativeLayout>
